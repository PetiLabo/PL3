<?xml version="1.0" encoding="UTF-8"?>
<petilabo>
	<!-- Tailles d'images -->
	<taille_image nom="Ardoise">
		<largeur>430</largeur>
		<hauteur>325</hauteur>
		<compression>80</compression>
	</taille_image>
	<taille_image nom="Paysage">
		<largeur>640</largeur>
		<hauteur>480</hauteur>
		<compression>75</compression>
	</taille_image>
	<taille_image nom="Portrait">
		<largeur>480</largeur>
		<hauteur>640</hauteur>
		<compression>75</compression>
	</taille_image>

	<!-- Styles de page -->
    <style_page nom="defaut">
        <largeur>90%</largeur>
        <responsive>700px</responsive>
    </style_page>

	<!-- Styles de contenu -->
    <style_contenu nom="defaut">
        <fond>#800</fond>
    </style_contenu>

	<!-- Styles de bloc -->
    <style_bloc nom="defaut">
		<marge>10px</marge>
		<retrait>10px</retrait>
        <fond>#080</fond>
		<css>border-radius:10px;</css>
    </style_bloc>

	<!-- Styles de texte -->
    <style_texte nom="grand">
        <taille>150%</taille>
    </style_texte>
    <style_texte nom="italique">
        <css>font-style:italic;</css>
    </style_texte>

	<!-- Styles de survol -->
    <style_survol nom="fond_gris">
		<couleur_fond>#333</couleur_fond>
	</style_survol>
</petilabo>
