<?xml version="1.0" encoding="UTF-8"?>
<petilabo>
	<!-- Meta -->
    <meta>
        <auteur>Philippe GILLES</auteur>
        <forge>PetiLabo</forge>
		<documentation>http://www.petilabo.net</documentation>
        <telechargement>http://www.petixml.net/pl3/themes/original</telechargement>
    </meta>

	<!-- Tailles d'images -->
	<taille_image nom="Ardoise">
		<largeur>430</largeur>
		<hauteur>325</hauteur>
		<compression>80</compression>
	</taille_image>
	<taille_image nom="Paysage">
		<largeur>640</largeur>
		<hauteur>480</hauteur>
		<compression>75</compression>
	</taille_image>
	<taille_image nom="Portrait">
		<largeur>480</largeur>
		<hauteur>640</hauteur>
		<compression>75</compression>
	</taille_image>
	<taille_image nom="Largeur fixe">
		<largeur>300</largeur>
		<compression>75</compression>
	</taille_image>
	<taille_image nom="Hauteur fixe">
		<hauteur>300</hauteur>
		<compression>75</compression>
	</taille_image>
	<taille_image nom="Taille libre">
		<compression>75</compression>
	</taille_image>
	
	<!-- Styles de page -->
    <style_page nom="defaut">
        <largeur>90%</largeur>
        <responsive>700px</responsive>
    </style_page>

	<!-- Styles de contenu -->
    <style_contenu nom="defaut">
        <fond>#bbb</fond>
    </style_contenu>
    <style_contenu nom="transparent">
    </style_contenu>
    <style_contenu nom="alerte">
		<fond>#a22</fond>
    </style_contenu>

	<!-- Styles de bloc -->
    <style_bloc nom="defaut">
		<marge>10px</marge>
		<retrait>10px</retrait>
        <fond>#ddf</fond>
		<css>border-radius:10px;</css>
    </style_bloc>
    <style_bloc nom="sombre">
		<marge>5px</marge>
		<retrait>15px</retrait>
        <fond>#336</fond>
		<css>border-radius:10px;</css>
    </style_bloc>

	<!-- Styles de texte -->
    <style_texte nom="grand">
        <taille>150%</taille>
    </style_texte>
    <style_texte nom="italique">
        <css>font-style:italic;</css>
    </style_texte>

	<!-- Styles de survol -->
    <style_survol nom="attenuation">
		<opacite>0.8</opacite>
	</style_survol>
    <style_survol nom="zoom">
		<css>transform: scale(1.1);</css>
	</style_survol>
    <style_survol nom="zoom_et_attenuation">
		<opacite>0.8</opacite>
		<css>transform: scale(1.1);</css>
	</style_survol>
</petilabo>
